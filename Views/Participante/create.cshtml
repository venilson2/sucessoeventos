@model SucessoEventos.ViewModels.ParticipanteViewModel

@{
    ViewData["Title"] = "Cadastrar";
}

@if (@TempData["error"] != null)
{
    <div id="alert" class="alert-feedback alert alert-success alert-dismissible fade show d-flex justify-content-between" role="alert">
        @TempData["error"]
        <span type="button" class="close" data-dismiss="alert" aria-label="Fechar">
            <span aria-hidden="true">X</span>
        </span>
    </div>
}

@using (Html.BeginForm("Create", "Participante", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Nome)
        @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.DataNascimento)
        @Html.TextBoxFor(model => model.DataNascimento, new { @class = "form-control date-mask" })
        @Html.ValidationMessageFor(model => model.DataNascimento, "", new { @class = "text-danger" })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.Telefone)
        @Html.TextBoxFor(model => model.Telefone, new { @class = "form-control phone-mask" })
        @Html.ValidationMessageFor(model => model.Telefone, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mt-4">
        <button type="submit" class="btn btn-primary">Cadastrar</button>
    </div>
}

@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.phone-mask').mask('(99) 99999-9999');
        });

        $(document).ready(function () {
            $('.date-mask').mask('99/99/9999');
        });
    </script>
}
